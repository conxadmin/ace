#! /bin/sh

# Make sure that we're setup with the docker machine correctly
eval $(docker-machine env default)

# Build
docker build -t mduduzik/apache-ace-conx-target .

# Run the apache ace server container first
docker run -it \
  -p 9000:9000 \
  -p 8099:8080 \
  --name apache-ace-server-local \
  -e "ACE_SERVER=conx.dev:9000" \
  -e "ACE_OBR=conx.dev:9000" \
  -e "HTTP_PORT=9000" \
  mduduzik/apache-ace-server